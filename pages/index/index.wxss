@import "../../components/loading/loading.wxss";
.container{
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.loading-more{
    height:88rpx;
    line-height: 88rpx;
    text-align: center;
}
.loadingImg{
  width: 32rpx;
  height: 32rpx;
}
.content{
  flex:1;
  overflow-y:auto;
}
.item{
  position: relative;
  padding-top:40rpx;
  min-height: 70rpx;
}
.default{
  padding-left:110rpx;
  flex-direction:row;
  display: flex;
  justify-content:flex-start
}
.mine{
  padding-right:110rpx;
  flex-direction:row;
  display: flex;
  justify-content:flex-end
}
.avatar{
  position: absolute;
  top: 40rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 4rpx;
}
.default .avatar{
  left:20rpx;
}
.mine .avatar{
  right:20rpx;
}
.nickname{
  position: absolute;
  height:30rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #999;
  width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.item-content{
  position: relative;
  color: #000;
  min-width: 30rpx;
  max-width: 80%;
  min-height: 30rpx;
  border: solid 2rpx #d7d7d7;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 15rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  word-wrap:break-word;
  margin-top: 34rpx;
}
.default .item-content:before{
  content: '';
  position: absolute;
  left: -9rpx;
  top: 24rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: #fff;
  border-bottom: solid 2rpx #d7d7d7;
  border-right: solid 2rpx #d7d7d7;
  transform: rotate(135deg);
}
.mine .item-content{
  background: #b1e370;
  margin-top: 0;
}
.mine .item-content:before{
  content: '';
  position: absolute;
  right: -9rpx;
  top: 24rpx;
  width: 16rpx;
  height: 16rpx;
  transform: rotate(-45deg);
  background: #b1e370;
  border-bottom: solid 2rpx #abd569;
  border-right: solid 2rpx #abd569;
}
.item-phone{
  color: #0066c0;
  margin:10px 0;
}
.footer{
  height: 100rpx;
  background: #f5f5f7;
}
.footer .textarea{
  font-size: 32rpx;
  line-height: 32rpx;
  color: #999;
  margin: 16rpx 20rpx;
  padding: 16rpx 10rpx;
  max-height: 160rpx;
  border: 2rpx solid #eee;
  width: 500rpx;
  background: #fff;
  border-radius: 10rpx;
}
.submit{
  position: absolute;
  right: 0;
  bottom: 0;
  margin-right: 30rpx;
  margin-bottom: 14rpx;
  width: 120rpx;
  height: 70rpx;
  font-size: 28rpx;
  line-height: 70rpx;
}
.newMsg {
  position:fixed;
  top:50rpx;
  right:0;
  background:#faf8f9;
  width:200rpx;
  height:60rpx;
  line-height:60rpx;
  text-align:center;
  border-radius:60rpx 0 0 60rpx;
  z-index: 100;
}
.newMsgText{
  position: absolute;
  right: 22rpx;
  top: 18rpx;
  font-size:24rpx;
  color:#3bad67;
  letter-spacing:0;
  line-height:24rpx;
}
.newMsgText:before {
  content: '';
  position: absolute;
  left: -24rpx;
  top: 6rpx;
  width: 10rpx;
  height: 10rpx;
  border-left: solid 2rpx #63aa44;
  border-top: solid 2rpx #63aa44;
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
}
.newMsgText:after {
  content: '';
  position: absolute;
  left: -24rpx;
  top: 14rpx;
  width: 10rpx;
  height: 10rpx;
  border-bottom: solid 2rpx #63aa44;
  border-right: solid 2rpx #63aa44;
  -webkit-transform: rotate(-135deg);
          transform: rotate(-135deg);
}
