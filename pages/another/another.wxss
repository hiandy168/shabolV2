@import "../../components/loading/loading.wxss";
.container{
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.loading-more{
    height:88rpx;
    line-height: 88rpx;
    text-align: center;
}
.loadingImg{
  width: 32rpx;
  height: 32rpx;
}
.content{
  flex:1;
  overflow-y:auto;
}
.item{
  position: relative;
  padding-top:40rpx;
  min-height: 70rpx;
}
.default{
  padding-left:110rpx;
  flex-direction:row;
  display: flex;
  justify-content:flex-start
}
.avatar{
  position: absolute;
  top: 40rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 4rpx;
}
.default .avatar{
  left:20rpx;
}
.nickname{
  position: absolute;
  height:30rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #999;
  width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.item-content{
  position: relative;
  color: #000;
  min-width: 30rpx;
  max-width: 80%;
  min-height: 30rpx;
  border: solid 2rpx #d7d7d7;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 15rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  word-wrap:break-word;
  margin-top: 34rpx;
}
.default .item-content:before{
  content: '';
  position: absolute;
  left: -8rpx;
  top: 24rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: #fff;
  border-bottom: solid 2rpx #d7d7d7;
  border-right: solid 2rpx #d7d7d7;
  transform: rotate(135deg);
}
.item-phone{
  color: #0066c0
}
