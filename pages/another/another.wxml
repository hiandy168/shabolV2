<import src="../../components/loading/loading.wxml"/>
<template is="loading" data="{{loading}}"/>
<view class="container">
  <view class="loading-more" hidden="{{loadMore}}">
    <image src="../../images/loading.gif" class="loadingImg" />
  </view>
  <scroll-view scroll-y="{{scrollStatus}}" class="content" style="height:100%" scroll-into-view="{{lastMessageId}}" bindscrolltoupper="toUpper" upper-threshold="50">
    <view class="item default" wx:for="{{messages}}" wx:key="id" wx:for-item="message" id="item_{{message.id}}">
      <image class="avatar" src="{{message.user_photo}}" />
      <view class="nickname">
        <text>{{message.user_name}}</text>
      </view>
      <view class="item-content">
        <text class="item-text">{{message.user_content}}</text>
        <view wx:for="{{message.phone_num[0]}}" class="item-phone" data-item="{{item}}" bindtap="makePhoneCall">{{item}}</view>
        <view>联系我时，请说明是在极速配万人发货群看到的，谢谢！</view>
      </view>
    </view>
    <view id="maxlength" style="height:30px;"></view>
  </scroll-view>
</view>
